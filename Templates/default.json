{
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "TextBlock",
      "size": "ExtraLarge",
      "text": "{heading}"
    },
    {
      "type": "RichTextBlock",
      "inlines": [
        {
          "type": "TextRun",
          "text": "{content}"
        }
      ]
    },
    {
      "type": "Image",
      "url": "{imageUrl}",
      "isVisible": "{imageVisibility}"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}